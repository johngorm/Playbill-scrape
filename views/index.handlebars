<h1>Broadway News</h1>

{{#if error}}
	<h1>Cannot connect to playbill.com. Please try again later.</h1>
{{/if}}

{{#each newsLink}}
	<div class='newsItem'>
		<img scr={{this.imglink}}>
		<a href={{this.link}} class='newsTitle'>{{this.title}}</a>
		<div class='newsSubtitle'>{{this.author}}</div>
	</div>
{{/each}}